<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".FragmentsDictionaryY.FragmentTableLayoutY">

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:backgroundTint="#A3A3A3"
        android:clickable="false"
        android:scaleY="4.2"
        app:layout_constraintEnd_toEndOf="@+id/tbLay"
        app:layout_constraintStart_toStartOf="@+id/tbLay"
        app:layout_constraintTop_toBottomOf="@+id/tbLay" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIndicatorColor="#3AF1DA"
        app:tabTextColor="#FFFFFF">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Словарь" />


    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/frame_slov"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
